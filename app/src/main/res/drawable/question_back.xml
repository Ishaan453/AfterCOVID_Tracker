<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- This is the line -->
    <item>
        <shape>
            <padding android:left="1dp" android:top="1dp" android:right="1dp" android:bottom="0dp"/>
            <solid android:color="@color/black" />
            <corners android:topRightRadius="10dp" android:topLeftRadius="10dp"/>
        </shape>
    </item>
    <!-- This is the main color -->
    <item>
        <shape>
            <solid android:color="@color/white"/>
            <corners android:topRightRadius="10dp" android:topLeftRadius="10dp"/>
            <padding android:bottom="10dp" android:top="10dp" android:left="20dp" android:right="10dp"/>
        </shape>
    </item>
</layer-list>